{
    "name": "dog-feeding-bot",
    "version": "1.0.0",
    "description": "Telegram bot for dog feeding coordination",
    "main": "dist/bot.js",
    "scripts": {
        "start": "node dist/bot.js",
        "start:prod": "NODE_ENV=production node dist/bot.js",
        "dev": "TZ=UTC NODE_ENV=development ts-node-dev --respawn --transpile-only src/bot.ts",
        "dev:ts": "ts-node src/bot.ts",
        "build": "tsc",
        "clean": "rm -rf dist",
        "deploy": "npm run build && npm run start:prod",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:utils": "jest --testPathPattern=tests/utils",
        "test:services": "jest --testPathPattern=tests/services",
        "test:scenes": "jest --testPathPattern=tests/scenes",
        "test:e2e": "jest --testPathPattern=tests/e2e",
        "test:utils:watch": "jest --testPathPattern=tests/utils --watch",
        "test:services:watch": "jest --testPathPattern=tests/services --watch",
        "test:scenes:watch": "jest --testPathPattern=tests/scenes --watch",
        "test:e2e:watch": "jest --testPathPattern=tests/e2e --watch",
        "yc:deploy": "npm run build && pm2 start ecosystem.yandex.config.js && pm2 save",
        "yc:update": "git pull && npm install && npm run build && pm2 restart dog-feeding-bot",
        "yc:logs": "pm2 logs dog-feeding-bot",
        "yc:status": "pm2 status",
        "deploy:yandex": "./scripts/deployment/deploy-yandex.sh",
        "update:yandex": "./scripts/maintenance/update-yandex.sh",
        "logs:yandex": "./scripts/maintenance/logs-yandex.sh",
        "status:yandex": "./scripts/maintenance/status-yandex.sh",
        "reset-vm:yandex": "./scripts/maintenance/reset-vm.sh"
    },
    "dependencies": {
        "@types/sqlite3": "^5.1.0",
        "dotenv": "^16.3.1",
        "sqlite3": "^5.1.7",
        "telegraf": "^4.15.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^20.10.0",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.0"
    }
}
